{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@payload-config": ["./payload.config.ts"],
      "@components/*": [
        "./app/(frontend)/components/*",
        "./app/components/*"
      ],
      "@blocks/*": [
        "./app/(frontend)/blocks/*",
        "./app/blocks/*"
      ],
      "@heros/*": [
        "./app/(frontend)/heros/*",
        "./app/heros/*"
      ],
      "@utilities/*": [
        "./app/(frontend)/utilities/*",
        "./app/utilities/*"
      ],
      "@endpoints/*": [
        "./app/(frontend)/endpoints/*",
        "./app/endpoints/*"
      ],
      "@fields/*": ["./fields/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "redirects.js",
    "next.config.js",
    "next-sitemap.config.cjs"
  ],
  "exclude": ["node_modules"]
}